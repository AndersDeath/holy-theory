{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "prettier"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint", "prettier"],
  "rules": {
    "prettier/prettier": "error",
    "no-unused-vars": "warn",
    "no-console": "off",
    "semi": ["error", "always"],
    "quotes": ["error"],
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "comma-dangle": ["error", "always-multiline"],
    "no-var": "error",
    "prefer-const": "error",
    "@typescript-eslint/no-explicit-any": "off"
  }
}
